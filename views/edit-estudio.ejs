<% include layout %>
<h2 class="text-center">Editar Estudio</h2>

<form action="/estudios/update/<%= estudio._id %>" method="POST" class="needs-validation" novalidate>
  <div class="form-group">
    <label for="nombre">Nombre</label>
    <input type="text" name="nombre" class="form-control" id="nombre" value="<%= estudio.nombre %>" required>
    <div class="invalid-feedback">Por favor, introduce el nombre.</div>
  </div>
  <div class="form-group">
    <label for="tipo">Tipo</label>
    <input type="text" name="tipo" class="form-control" id="tipo" value="<%= estudio.tipo %>" required>
    <div class="invalid-feedback">Por favor, introduce el tipo.</div>
  </div>
  <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>

